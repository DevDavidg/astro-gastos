---
interface Props {
  type?: 'button' | 'submit' | 'reset';
  className?: string;
}

const { type = 'button', className = '' } = Astro.props;
---

<button 
  type={type}
  class={`px-4 py-2 bg-gray-200 hover:bg-gray-300 rounded text-gray-800 transition-colors ${className}`}
>
  <slot />
</button> 