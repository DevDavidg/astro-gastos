---
import '../styles/global.css';
import CurrencySelector from '../components/settings/CurrencySelector';
import NavBar from '../components/navigation/NavBar';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - Astro Gastos</title>
	</head>
	<body class="bg-gray-50 min-h-screen">
		<header>
			<div class="mx-auto px-4 py-4">
				<NavBar client:load />
			</div>
		</header>
		
		<main class="container mx-auto px-4 py-8">
			<slot />
		</main>
		
		<footer class="bg-white shadow-inner mt-auto py-4">
			<div class="container mx-auto px-4 text-center text-gray-500">
				<p>&copy; {new Date().getFullYear()} Astro Gastos. Todos los derechos reservados.</p>
			</div>
		</footer>

		<script>
			if (sessionStorage.redirectTo) {
				const redirectTo = sessionStorage.redirectTo;
				sessionStorage.removeItem('redirectTo');
				history.replaceState(null, '', redirectTo);
			}
		</script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
